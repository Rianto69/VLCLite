<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailFile">

    <include
        android:id="@+id/my_toolbar"
        layout="@layout/toolbar" />

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="450dp"
        android:layout_height="200dp"
        android:layout_below="@+id/my_toolbar"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/videoView">

        <TextView
            android:textColor="@color/black"
            android:id="@+id/tvJudul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:text="Video 1"
            android:textSize="20sp" />

        <TextView
            android:textColor="@color/black"
            android:id="@+id/tvdescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:textStyle="normal"
            android:text="Video Description:"
            android:textSize="20sp" />

        <TextView
            android:textColor="@color/black"
            android:id="@+id/tvlorem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:textStyle="normal"
            android:text="Airi and Laville Heavenly Strike"
            android:textSize="20sp" />

        <TextView
            android:textColor="@color/black"
            android:id="@+id/tvresource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:textStyle="normal"
            android:text="Resource Video:"
            android:textSize="20sp" />

        <TextView
            android:textColor="@color/black"
            android:id="@+id/tvreference1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:textStyle="normal"
            android:text="https://www.youtube.com/watch?v=r6IaCIzcXWc"
            android:textSize="20sp" />
    </LinearLayout>
</RelativeLayout>